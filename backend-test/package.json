{
  "name": "backend-test",
  "version": "0.1.0",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "engines": {
    "node": ">=20 <21",
    "npm": ">=10 <11"
  },
  "scripts": {
    "nest": "nest",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "ROOT_DIR=. node dist/main.js",
    "dev": "ROOT_DIR=. nest start --watch",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "lint-and-type-check": "npm run lint && npm run type-check",
    "test": "jest --detectOpenHandles --forceExit",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e:api": "jest --config ./apps/api/test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^10.3.3",
    "@nestjs/core": "^10.3.3",
    "@nestjs/platform-express": "^10.3.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "dayjs": "^1.11.10",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@nestjs/cli": "^10.3.2",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.3",
    "@stylistic/eslint-plugin": "^1.6.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.17",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.0.1",
    "@typescript-eslint/parser": "^7.0.1",
    "eslint": "^8.56.0",
    "eslint-webpack-plugin": "^4.0.1",
    "jest": "^29.7.0",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-jest": "^29.1.2",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.3.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "globalSetup": "./test-setup.ts",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "^@lib/app-config(|/.*)$": "<rootDir>/libs/app-config/src/$1",
      "^@lib/logger(|/.*)$": "<rootDir>/libs/logger/src/$1",
      "^@lib/utility(|/.*)$": "<rootDir>/libs/utility/src/$1",
      "^@lib/filter(|/.*)$": "<rootDir>/libs/filter/src/$1",
      "^@lib/constant(|/.*)$": "<rootDir>/libs/constant/src/$1",
      "^@lib/exception(|/.*)$": "<rootDir>/libs/exception/src/$1",
      "^@lib/database(|/.*)$": "<rootDir>/libs/database/src/$1",
      "^@lib/validation(|/.*)$": "<rootDir>/libs/validation/src/$1",
      "^@lib/middleware(|/.*)$": "<rootDir>/libs/middleware/src/$1",
      "^@lib/dayjs(|/.*)$": "<rootDir>/libs/dayjs/src/$1"
    }
  }
}